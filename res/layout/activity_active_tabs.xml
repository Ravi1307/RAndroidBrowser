<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/active_tab_layout_select"
        android:layout_width="10sp"
        android:layout_height="match_parent"
        android:background="@color/brown"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/active_tab_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/active_tab_url_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/active_tab_title_text"
            android:layout_marginEnd="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textStyle="italic" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/active_tab_close_image"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="2sp"
        android:contentDescription="@string/textCancel"
        android:src="@drawable/ic_action_cancel" />

</LinearLayout>